<%- contentFor('body') %>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <i class="fa fa-users"></i> Inquilinos
        </h1>
        <ol class="breadcrumb">
            <li><a href="/app"><i class="fa fa-home"></i> Home</a></li>
            <li class="active"><i class="fa fa-users"></i> Inquilinos</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <p>
            <a href="/app/tenants/create" class="btn btn-default">
                <span class="fa fa-plus"></span> Adicionar
            </a>
        </p>

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Lista de Inquilinos</h3>
            </div>

            <div class="box-body no-padding">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 40px" class="text-right">#</th>
                            <th>Nome</th>
                            <th style="width: 160px;" class="text-center">Criado em</th>
                            <th style="width: 160px;" class="text-center">Ações</th>
                        </tr>
                        <% for (const tenant of tenants) { %>
                            <tr>
                                <td class="text-right"><%- tenant.id %></td>
                                <td>
                                    <a href="/app/tenants/<%- tenant.id %>"><%- tenant.name %></a>
                                </td>
                                <td class="text-center"><%- tenant.createdAt %></td>
                                <td class="text-center">
                                    <a href="#" class="btn btn-default" title="Editar">
                                        <span class="fa fa-pencil"></span>
                                    </a>

                                    <a href="#" class="btn btn-danger" title="Remover">
                                        <span class="fa fa-trash"></span>
                                    </a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>


    </section>

    <%- contentFor('scripts') %>